<?xml version="1.0"?>
<ruleset name="LaravelProject">
    <description>Laravel Project CodeSniffer Configuration</description>
    <file>./app</file>
    <file>./config</file>
    <file>./database</file>
    <file>./routes</file>
    <file>./tests</file>

    <config name="encoding" value="utf-8"/>
    <config name="extensions" value="php"/>
    <config name="tabWidth" value="4"/>
    <config name="testVersion" value="7.4-"/>
    <config name="cache" value=".phpcs.cache"/>
    <config name="reportWidth" value="120"/>

    <rule ref="PSR12">
        <exclude name="Generic.Files.LineLength"/>
        <exclude name="Generic.ControlStructures.InlineControlStructure"/>
        <exclude name="Generic.Functions.OpeningFunctionBraceKernighanRitchie"/>
        <exclude name="Squiz.PHP.DisallowMultipleAssignments.Found"/>
        <exclude name="Squiz.PHP.DisallowMultipleStatements.Found"/>
    </rule>

    <rule ref="PSR2.ControlStructures.SwitchDeclaration"/>
    <rule ref="PSR2.ControlStructures.SwitchDeclaration.ContentAfterKeyword"/>
    <rule ref="PSR2.ControlStructures.SwitchDeclaration.ContentBeforeFirstCase"/>
    <rule ref="PSR2.ControlStructures.SwitchDeclaration.NoBreakBeforeFirstCase"/>
    <rule ref="PSR2.ControlStructures.SwitchDeclaration.NoDefaultBeforeFirstCase"/>
    <rule ref="PSR2.ControlStructures.SwitchDeclaration.NoEmptyCaseBody"/>
    <rule ref="PSR2.ControlStructures.SwitchDeclaration.SpaceBeforeCloseBrace"/>
    <rule ref="PSR2.Files.EndFileNewline"/>
    <rule ref="PSR2.Methods.FunctionCallSignature"/>
    <rule ref="PSR2.Methods.FunctionCallSignature.SpaceAfterOpenBracket"/>
    <rule ref="PSR2.Methods.FunctionCallSignature.SpaceBeforeCloseBracket"/>
    <rule ref="PSR2.Methods.FunctionClosingBrace"/>
    <rule ref="PSR2.Methods.FunctionClosingBrace.SpaceAfterClose"/>
    <rule ref="PSR2.Methods.FunctionClosingBrace.SpaceBeforeClose"/>
    <rule ref="PSR2.Methods.FunctionDeclaration"/>
    <rule ref="PSR2.Methods.FunctionDeclaration.SpaceAfterKeyword"/>
    <rule ref="PSR2.Methods.FunctionDeclaration.SpaceBeforeOpenParenthesis"/>
    <rule ref="PSR2.Methods.FunctionDeclarationClosingBrace"/>
    <rule ref="PSR2.Methods.FunctionDeclarationClosingBrace.SpaceAfterClose"/>
    <rule ref="PSR2.Methods.FunctionDeclarationClosingBrace.SpaceBeforeClose"/>
    <rule ref="PSR2.Methods.FunctionOpeningBrace"/>
    <rule ref="PSR2.Methods.FunctionOpeningBrace.SpaceAfterOpen"/>
    <rule ref="PSR2.Methods.FunctionOpeningBrace.SpaceBeforeOpen"/>
    <rule ref="PSR2.Properties.PropertyDeclaration"/>
    <rule ref="PSR2.Properties.PropertyDeclaration.SpaceAfterVisibility"/>
    <rule ref="PSR2.Properties.PropertyDeclaration.SpaceAfterStatic"/>
    <rule ref="PSR2.Properties.PropertyDeclaration.SpaceAfterVariable"/>
    <rule ref="PSR2.Properties.PropertyDeclaration.SpaceBeforeSemicolon"/>
    <rule ref="PSR2.Properties.PropertyDeclarationClosingBrace"/>
    <rule ref="PSR2.Properties.PropertyDeclarationClosingBrace.SpaceAfterClose"/>
    <rule ref="PSR2.Properties.PropertyDeclarationClosingBrace.SpaceBeforeClose"/>
    <rule ref="PSR2.Properties.PropertyDeclarationOpeningBrace"/>
    <rule ref="PSR2.Properties.PropertyDeclarationOpeningBrace.SpaceAfterOpen"/>
    <rule ref="PSR2.Properties.PropertyDeclarationOpeningBrace.SpaceBeforeOpen"/>
    <rule ref="Squiz.Functions.FunctionDeclarationArgumentSpacing"/>
    <rule ref="Squiz.PHP.DisallowInlineAssignment.Found"/>

    <!-- Additional Rules -->
    <!-- Tambahkan aturan tambahan yang ingin Anda gunakan di sini -->

</ruleset>
